<div class="row">
    <div class="col-sm-4">
        <h1><%= @cocktail[:name] %></h1>
        <p><%= @cocktail[:description] %></p>
        <% for guest in @guests %>
            <% user = @users_table.where(:id => guest[:user_id]).to_a[0] %>
            <div class="media">
                <% if guest[:going] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= user[:name] %></h5>
                    <%= guest[:special_requests] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <a href="/cocktails/<%= @cocktail[:id] %>/guests/new" class="btn btn-primary">Select now!</a>
        </p>
    </div>
    <div class="col-sm-4">
    <h4>Cocktail details:</h4>
    <p><h6>Spirit:</h6> <%= @cocktail[:base_spirit] %></p>
        <p><h6>Preparation Method:</h6> <%= @cocktail[:method] %></p>
        <p><h6>Glassware:</h6> <%= @cocktail[:glassware] %></p>
    </div>
    <div class="col-sm-4">
        <h6>How many fellow guests have selected this libation to begin their journey?</h6>
        <p><%= @count %></p>
    </div>
</div>